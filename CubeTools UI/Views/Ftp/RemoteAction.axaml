<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CubeTools_UI.Views.Ftp.RemoteAction">
	
	<UserControl.Styles>
		<StyleInclude Source="/Styles/Styles.axaml"/>
	</UserControl.Styles>
	
	<WrapPanel>
		
		<Button Classes="Manager" Name="AddFileButton" Click="CreateFile">
			<Image Source="../../Assets/CubeToolsIconsCompressed/Create.ico"/>
		</Button>
		
		<Button Classes="Manager" Name="AddDirButton" Click="CreatDir">
			<Image Source="../../Assets/CubeToolsIconsCompressed/CreateFolder.ico"/>
		</Button>
		
		<Button Classes="Manager" Name="RenameButton" Click="Rename">
			<Image Source="../../Assets/CubeToolsIconsCompressed/Rename.ico"/>
		</Button>
		
		<Button Classes="Manager" Name="DeleteButton" Click="Delete">
			<Image Source="../../Assets/CubeToolsIconsCompressed/Delete.ico"/>
		</Button>
		
	</WrapPanel>
</UserControl>
