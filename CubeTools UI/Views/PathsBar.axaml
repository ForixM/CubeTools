<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:CubeTools_UI.Views"
             xmlns:viewModels="clr-namespace:CubeTools_UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CubeTools_UI.Views.PathsBar">
	<!-- Link between DataContext and ViewModel -->
	<Design.DataContext>
		<viewModels:PathsBarViewModel/>
	</Design.DataContext>
	
	<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
		<ListBox Items="{Binding Items}" CornerRadius="0 30 0 30" Background="#D3D3D5" Margin="5">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Button Button.Click="OnClicked">
						<WrapPanel>
							<Image Source="../Assets/folder.ico" Height="20"/>
							<TextBlock Text="{Binding Name}" Margin="5"/>
							<TextBlock Text="{Binding SizeXaml}" Margin="5"/>
						</WrapPanel>
					</Button>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</ScrollViewer>
</UserControl>
