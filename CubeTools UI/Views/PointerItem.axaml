 <UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CubeTools_UI.Views.PointerItem">
     
     <Button CornerRadius="8"  Background="White" 
             HorizontalAlignment="Left" PointerPressed="OnTaped" 
             Click="OnClick" DoubleTapped="OnDoubleTaped" Height="50">
         <WrapPanel VerticalAlignment="Center">
             <Image Name="Icon" Source="../../Assets/CubeToolsAppsExtensionsCompressed/None.ico" Height="30"/>
             <TextBlock Name="Name" Margin="5" VerticalAlignment="Center"/>
             <TextBlock Name="Size" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
         </WrapPanel>
     </Button>
     
 </UserControl>
