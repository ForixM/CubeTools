<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UI.Views.MainWindow"
        Icon="/Assets/cubetools.ico"
        Title="CubeTools"
		Width="800" Height="450"
		MinHeight="400" MinWidth="650"
		WindowStartupLocation="CenterScreen"
		ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaTitleBarHeightHint="-1"
		CanResize="False">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<!-- Structure des lignes du grid-->
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="31"/>
			<RowDefinition Height="40"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<!-- Première ligne-->
		
		<Grid Background="#E6E3E3" Grid.Row="0">
			<Border BorderThickness="1" BorderBrush="Beige"/>

			<TextBlock Text="Fares"
					   Foreground="Black"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"
					   FontFamily="Assets/Karla.ttf"/>
		</Grid>

		<!-- Deuxième ligne-->
		
		<Grid Background="Aquamarine" Grid.Row="1">
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="75"/>
				<ColumnDefinition Width="425"/>
				<ColumnDefinition Width="75"/>
			</Grid.ColumnDefinitions>

			<Grid Grid.Column="0">
				<Border BorderThickness="1" BorderBrush="Beige"/>
				<Button Name="Left_btn"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="75" Height="40">
					<StackPanel>
						<Image Source="/Assets/left-arrow.png"
							   Width="50"
							   Height="30"/>
					</StackPanel>
				</Button>
			</Grid>

			<Grid Grid.Column="1">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<Button Name="Right_btn"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="75" Height="40">
					<StackPanel>
						<Image Source="/Assets/right-arrow.png"
							   Width="50"
							   Height="30"/>
					</StackPanel>
				</Button>
				
			</Grid>

			<Grid Grid.Column="2">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<Button Name="Up_btn"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="75" Height="40">
					<StackPanel>
						<Image Source="/Assets/up.png"
							   Width="50"
							   Height="30"/>
					</StackPanel>
				</Button>
			</Grid>

			<Grid Grid.Column="3">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<Button Name="Sync_btn"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="75" Height="40">
					<StackPanel>
						<Image Source="/Assets/sync.png"
							   Width="50"
							   Height="30"/>
					</StackPanel>
				</Button>
			</Grid>
			
			<Grid Grid.Column="4">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<TextBlock Text="File Path"
						   Foreground="Black"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"/>
			</Grid>

			<Grid Grid.Column="5">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<Button Name="Settings_btn"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="75" Height="40">
					<StackPanel>
						<Image Source="/Assets/settings.png"
							   Width="50"
							   Height="30"/>
					</StackPanel>
				</Button>
			</Grid>
			
		</Grid>

		<!-- Troisième ligne-->
		
		<Grid Background="Magenta" Grid.Row="2">
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<!-- Partie Gauche de la troisième ligne-->
			
			<Grid Grid.Column="0">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<TextBlock Text="Fares"
						   Foreground="Black"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"/>
			</Grid>

			<!-- Partie Droite de la troisième ligne-->
			
			<Grid Grid.Column="1">
				<Border BorderThickness="1" BorderBrush="Beige"/>

				<TextBlock Text="Fares"
					   Foreground="Black"
					   VerticalAlignment="Center"
					   HorizontalAlignment="Center"/>
			</Grid>
			
		</Grid>			
	</Grid>

</Window>
