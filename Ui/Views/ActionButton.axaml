 <UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.ActionButton"
             xmlns:resource="clr-namespace:ResourcesLoader;assembly=ResourcesLoader">
     
     <Button Background="Transparent" CornerRadius="8" Name="Button" Height="45"
             Click="OnClick">
         <Image HorizontalAlignment="Center" VerticalAlignment="Center" Name="Icon" Source="{x:Static resource:ResourcesIconsCompressed.NoneCompressed}" Height="30"/>
     </Button>
     
 </UserControl>
