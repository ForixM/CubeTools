<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Ui.Views.Error.Information.ErrorInfo">
        
        <Grid ColumnDefinitions="50*,50*">
            
                <Grid Grid.Column="0" VerticalAlignment="Center">
                        <Button Width="70" Height="40" HorizontalAlignment="Center" Click="CloseClick" Content="Close"/>
                </Grid>
                <Grid Grid.Column="1" VerticalAlignment="Center">
                        <Button Width="70" Height="40" HorizontalAlignment="Center" Click="TryReloadClick" Content="Refresh"/>
                </Grid>
        </Grid>
</UserControl>
