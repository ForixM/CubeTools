<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.LinkBar.OneLink" MaxHeight="50" MaxWidth="192">
	
	<Button CornerRadius="8" Click="OpenLink" Background="Transparent" PointerPressed="OnPointerPressed" Height="50" Width="192">
		<StackPanel Orientation="Horizontal">
			<Image HorizontalAlignment="Left" Name="Image"/>
			<TextBlock VerticalAlignment="Center" TextWrapping="NoWrap" Margin="10 0 0 0" Name="Description"/>
		</StackPanel>
	</Button>
	
</UserControl>
