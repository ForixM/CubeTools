<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.MainWindow.DynamicLinkBar.OneLink" MaxHeight="40" MaxWidth="250">
	
	<Button Click="OpenLink" PointerPressed="OnPointerPressed" Height="40" Width="250">
		<WrapPanel>
			<Image HorizontalAlignment="Left" Name="Image"/>
			<TextBlock VerticalAlignment="Center" Name="Description"/>
		</WrapPanel>
	</Button>
	
</UserControl>
