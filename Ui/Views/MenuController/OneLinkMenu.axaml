<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.MenuController.OneLinkMenu" MaxWidth="250">
	
	<Button CornerRadius="8" Background="Transparent" Width="250" Height="50" Click="OpenLink"> <!-- PointerPressed="" Click="" -->
		<StackPanel Orientation="Horizontal">
			<Image HorizontalAlignment="Left" Width="35" Name="Image"/>
			<TextBlock VerticalAlignment="Center" Margin="10 0 0 0" Name="Description"/>
		</StackPanel>
	</Button>
	
</UserControl>
