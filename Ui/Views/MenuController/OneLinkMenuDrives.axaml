<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.LinkBar.OneLinkMenuDrives" MaxWidth="250">
	
	<Button CornerRadius="8" Background="Transparent" Width="250" Height="75" Click="OpenLink"> <!-- PointerPressed="" Click="" -->
		<Grid ColumnDefinitions="50, *">
			<Image Grid.Column="0" HorizontalAlignment="Left" Width="35" Name="Image"/>
			<Grid Grid.Column="1" Grid.RowDefinitions="*, *">
				<TextBlock Grid.Row="0" VerticalAlignment="Bottom" Name="Description"/>
				<ProgressBar Grid.Row="1" Background="Transparent" Foreground="#ffd256" BorderBrush="#b88900" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="75"
				             CornerRadius="5" Name="RunProgress" Value="100" IsIndeterminate="False" Minimum="0" Maximum="100" Height="15"/>
			</Grid>
		</Grid>
		
	</Button>
</UserControl>
