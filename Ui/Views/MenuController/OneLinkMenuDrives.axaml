<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.MenuController.OneLinkMenuDrives" MaxWidth="250">
	
	<Button CornerRadius="8" Background="Transparent" Width="250" Height="75" Click="OpenLink">
		<Grid ColumnDefinitions="50, *">
			<Image Grid.Column="0" HorizontalAlignment="Left" Width="35" Name="Image"/>
			<Grid Grid.Column="1" RowDefinitions="*, *, *">
				<TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Name="Description"/>
				<ProgressBar Grid.Row="1" Background="Transparent" Foreground="#ffd256" BorderBrush="#b88900" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="70"
				             CornerRadius="5" Name="RunProgress" Value="100" IsIndeterminate="False" Minimum="0" Maximum="100" Height="15"/>
				<TextBlock Grid.Row="2" Name="SpaceInfo" VerticalAlignment="Top" HorizontalAlignment="Left" />
			</Grid>
		</Grid>
		
	</Button>
</UserControl>
