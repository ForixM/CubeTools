 <UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.PointerItem"
             xmlns:resource="clr-namespace:ResourcesLoader;assembly=ResourcesLoader">
     
     <Button Background="Transparent" CornerRadius="8" Name="Button"
             HorizontalAlignment="Left" Height="50" Width="2000"
             PointerPressed="OnTaped" Click="OnClick" DoubleTapped="OnDoubleTaped">
         
         <WrapPanel VerticalAlignment="Center">
             <Image Name="Icon" Source="{x:Static resource:ResourcesIconsCompressed.NoneCompressed}" Height="30"/>
             <TextBlock Name="Name" Margin="5" VerticalAlignment="Center"/>
             <TextBlock Name="Size" Margin="5" VerticalAlignment="Center"/>
         </WrapPanel>
         
     </Button>
     
 </UserControl>
