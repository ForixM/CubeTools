 <Window xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ui.Views.Settings.ShortcutsSaver.ShortcutsSaver"
             WindowStartupLocation="CenterScreen"
             CanResize="False"
             Topmost="True"
             Title="Register your shortcut"
             Width="250" Height="250"
             KeyDown="OnKeyDown"
             LostFocus="OnLostFocus">
     
     <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
         <TextBlock HorizontalAlignment="Center" Text="Type to modify the shortcut :"/>
         <TextBlock HorizontalAlignment="Left" Name="LastDisplay"/>
         <TextBlock HorizontalAlignment="Left" Name="Display"/>
         <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
             <Button Content="Valid" Click="Valid"/>
             <Button Content="Clear" Click="Clear"/>
             <Button Content="Cancel" Click="Cancel"/>
         </WrapPanel>
     </StackPanel>
     
 </Window>
